<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.duodinamico.fragments.AltaSolicitudStepTwoFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rlDisplay">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pbLoader"
            android:visibility="gone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/fragment_alta_solicitud_step_two_txtsubtitulo_value"
            android:textColor="#ff000000"
            android:singleLine="false"
            android:textSize="20dp"
            android:id="@+id/txtSubtitulo"
            android:layout_gravity="left|top"
            android:textIsSelectable="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/llOptions"
            android:gravity="right"
            android:layout_below="@+id/txtSubtitulo"
            android:background="@drawable/background_15_percent_darker">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btnAddPrenda"
                android:src="@drawable/ic_add_button"
                android:background="#00ffffff"
                android:focusableInTouchMode="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView"
                android:src="@drawable/ic_separator" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btnInfoPrenda"
                android:background="#00ffffff"
                android:src="@drawable/ic_info_button"
                android:paddingRight="20dp" />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lvPrendas"
            android:layout_gravity="center"
            android:layout_below="@+id/llOptions" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/no_data_descripcion"
            android:id="@+id/txt_no_data"
            android:textSize="20dp"
            android:textColor="#555555"
            android:textAlignment="center"
            android:gravity="center"
            android:visibility="gone"
            android:layout_below="@+id/txtSubtitulo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</FrameLayout>
