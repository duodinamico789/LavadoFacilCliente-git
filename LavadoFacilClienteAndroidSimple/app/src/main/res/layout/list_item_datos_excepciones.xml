<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    tools:context="android.obligatorio.emisorasapp.AudioPlayerAct"
    android:layout_height="80dp"
    android:background="@drawable/lishape_selection_rlrowcontent"
    android:id="@+id/rlRowContent">

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:id="@+id/rlCantColumna"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_15_percent_darker_round">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDelete"
            android:src="@drawable/ic_delete_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:padding="15dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="[NomExc]"
        android:id="@+id/txtNomExc"
        android:textColor="#000000"
        android:padding="5dp"
        android:textSize="25sp"
        android:enabled="false"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/rlCantColumna"
        android:layout_toLeftOf="@+id/rlCantColumna"
        android:layout_alignParentBottom="true" />
</RelativeLayout>