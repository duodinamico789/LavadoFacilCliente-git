<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- Action Bar Styles -->
    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/action_bar</item>
    </style>

    <!-- text sizes and styles -->
    <style name="textViewStyle">@style/Subtitulo1</style>
    <style name="Subtitulo1" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#00777a</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
    </style>
</resources>
